{
  "manifest_version": 3,
  "name": "Page Content Saver",
  "version": "1.0",
  "description": "Save and search web page content with semantic search",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "commands"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "save-current-page": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Save current page"
    },
    "open-saved-pages": {
      "suggested_key": {
        "default": "Ctrl+J",
        "mac": "Command+J"
      },
      "description": "Open saved pages"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.wasm",
        "tokenizer.js",
        "embeddings.js",
        "models/*",
        "ort-wasm.wasm",
        "ort-wasm-simd.wasm",
        "ort-wasm-threaded.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}